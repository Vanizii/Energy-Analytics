<!DOCTYPE html>
<html>
<head>
  <title>ESP32 Sensor Daten</title>
  <script>
    // Diese Funktion wird aufgerufen, wenn neue Daten empfangen werden
    function updateSensorData(data) {
      var humidity = data.humidity;
      var temperature = data.temperature;

      // Aktualisieren Sie die Anzeige mit den neuen Daten
      document.getElementById("humidity").innerHTML = "Luftfeuchtigkeit: " + humidity + " %";
      document.getElementById("temperature").innerHTML = "Temperatur: " + temperature + " Â°C";
    }

    // Diese Funktion wird periodisch aufgerufen, um nach neuen Daten zu suchen
    function fetchData() {
      // URL, von der die Daten abgerufen werden
      var url = "https://Ihr_Server_Ip_Adresse/Ihr_Server_Endpunkt";

      // Daten mit AJAX abrufen
      var xhr = new XMLHttpRequest();
      xhr.open("GET", url, true);

      xhr.onload = function () {
        if (xhr.status === 200) {
          // Daten in das JSON-Format umwandeln
          var data = JSON.parse(xhr.responseText);
          updateSensorData(data);
        }
      };

      xhr.send();
    }

    // Daten alle 5 Sekunden aktualisieren
    setInterval(fetchData, 5000);
  </script>
</head>
<body>
  <h1>Sensor Daten vom ESP32</h1>
  <p id="humidity">Luftfeuchtigkeit: Wird geladen...</p>
  <p id="temperature">Temperatur: Wird geladen...</p>
</body>
</html>
